<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.MyApp.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/no_droids"
        android:layout_centerInParent="true"
        android:text="@string/no_droids"
        android:visibility="invisible"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/primary_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_below="@+id/toolbar"
        android:id="@+id/list_droids"
        android:divider="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add_white_36dp"
        fab:fab_colorNormal="@color/primary_color"
        fab:fab_colorPressed="@color/primary_color_pressed"
        fab:fab_colorRipple="@color/primary_color_ripple" />

</RelativeLayout>